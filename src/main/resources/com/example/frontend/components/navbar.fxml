<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: #2f2f2f;" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.controller.NavbarController">
    <GridPane fx:id="navbar" minHeight="600.0" minWidth="100.0" styleClass="main_navigation" VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <VBox fx:id="nav_createTestAutomaticButton" alignment="CENTER" onMouseClicked="#onCreateAutTestNavBtnClick" prefHeight="200.0" prefWidth="100.0" GridPane.vgrow="NEVER">
                <children>
                    <ImageView fx:id="createTestAutomaticNavImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../icons/file_add.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="createTestAutomaticNavLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="92.0" styleClass="navigation_item_label_notSelected" text="Create Test&#10;automatically" textAlignment="CENTER" textFill="WHITE" />
                </children>
            </VBox>
            <VBox fx:id="nav_createTestManualButton" alignment="CENTER" onMouseClicked="#onCreateManTestNavBtnClick" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                <children>
                    <ImageView fx:id="createTestManualNavImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../icons/file_add.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="createTestManualNavLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="110.0" styleClass="navigation_item_label_notSelected" text="Create Test&#10;manually" textAlignment="CENTER" textFill="WHITE" />
                </children>
            </VBox>
            <VBox fx:id="nav_uploadQuestionButton" alignment="CENTER" onMouseClicked="#onUploadQuestionNavBtnClick" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
                <children>
                    <ImageView fx:id="createQuestionNavImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../icons/file_upload.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="createQuestionNavLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="122.0" styleClass="navigation_item_label_notSelected" text="Create&#10;Question" textAlignment="CENTER" textFill="WHITE" />
                </children>
            </VBox>
            <VBox fx:id="nav_editQuestionButton" alignment="CENTER" onMouseClicked="#onEditQuestionNavBtnClick" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="3" GridPane.vgrow="NEVER">
                <children>
                    <ImageView fx:id="editQuestionNavImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../icons/file_edit_white.png" />
                        </image>
                    </ImageView>
                    <Label fx:id="editQuestionNavLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="122.0" styleClass="navigation_item_label_notSelected" text="Edit&#10;Question" textAlignment="CENTER" textFill="WHITE" />
                </children>
            </VBox>
         <VBox alignment="CENTER" onMouseClicked="#onSettingsNavBtnClick" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="4" GridPane.vgrow="NEVER">
            <children>
               <ImageView fx:id="settingsNavImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../icons/settings.png" />
                  </image>
               </ImageView>
               <Label fx:id="settingsNavLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="122.0" styleClass="navigation_item_label_notSelected" text="Settings" textAlignment="CENTER" textFill="WHITE" />
            </children>
         </VBox>
        </children>
    </GridPane>
</VBox>
