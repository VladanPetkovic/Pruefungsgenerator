<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="inputLayout" spacing="10" styleClass="modals" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.modals.AddStudyProgram_ScreenController">
    <Label fx:id="inputNameLabel" styleClass="modal_topic_label" text="Enter new Study Program Name:" />
    <TextField fx:id="inputName">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <Label fx:id="inputAbbrLabel" styleClass="modal_topic_label" text="Enter new Study Program Abbreviation:" />
    <TextField fx:id="inputAbbr">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin></TextField>
    <HBox alignment="CENTER" fillHeight="false">
        <Button onAction="#handleConfirmButtonAction" styleClass="btn_grey" text="Confirm" />
      <padding>
         <Insets bottom="10.0" />
      </padding>
    </HBox>
</VBox>
