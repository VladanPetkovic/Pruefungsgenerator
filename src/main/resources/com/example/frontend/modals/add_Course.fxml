<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="modals" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.modals.AddCourse_ScreenController">


    <Label styleClass="modal_topic_label" text="Enter new Course Name:">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Label>
    <TextField fx:id="inputName">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin></TextField>

    <HBox>
        <Label styleClass="modal_topic_label" text="Select new course number:">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin></Label>
        <Spinner fx:id="numericSpinner">
         <HBox.margin>
            <Insets right="10.0" top="10.0" />
         </HBox.margin></Spinner>
    </HBox>

    <Label styleClass="modal_topic_label" text="Enter new Lecturer:">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Label>
    <TextField fx:id="inputLecturer">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin></TextField>

    <HBox alignment="CENTER">
        <Button onAction="#handleConfirm" styleClass="btn_grey" text="Confirm">
            <HBox.margin>
                <Insets />
            </HBox.margin></Button>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
