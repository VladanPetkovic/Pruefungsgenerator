                     <children>
                        <Button pickOnBounds="false" styleClass="menu_btn">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                                 <image>
                                    <Image url="@../icons/file_upload.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
