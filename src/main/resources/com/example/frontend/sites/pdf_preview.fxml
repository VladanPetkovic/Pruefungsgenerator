                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="menu_btn">
                                    <image>
                                        <Image url="@../icons/go_back_white.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
