<VBox minHeight="698.0" minWidth="1120.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.controller.Home_ScreenController">
   <children>
       <fx:include source="../components/title_banner.fxml"/>
      <HBox minWidth="500.0" VBox.vgrow="ALWAYS">
         <children>
            <GridPane alignment="CENTER" minHeight="100.0" styleClass="homeScreen_gridPane" stylesheets="@../css/main.css" HBox.hgrow="ALWAYS">
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="560.0" minWidth="10.0" prefWidth="386.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="669.0" minWidth="0.0" prefWidth="386.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                   <MenuButton fx:id="studyProgramMenuButton" alignment="CENTER" maxWidth="270.0" mnemonicParsing="false" onAction="#onStudyProgramBtnClick" prefHeight="40.0" prefWidth="270.0" styleClass="menuButton_dark" stylesheets="@../css/main.css" text="Studyprograms">
                       <!-- Items will be dynamically loaded by the controller -->
                       <font>
                           <Font size="20.0" />
                       </font>
                   </MenuButton>
                   <MenuButton fx:id="coursesMenuButton" alignment="CENTER" maxWidth="270.0" mnemonicParsing="false" onAction="#onCoursesBtnClick" prefHeight="40.0" prefWidth="270.0" styleClass="menuButton_dark" stylesheets="@../css/main.css" text="Courses" GridPane.columnIndex="1">
                       <!-- Items will be dynamically loaded by the controller -->
                       <font>
                           <Font size="20.0" />
                       </font>
                   </MenuButton>
               </children>
            </GridPane>
         </children>
      </HBox>
      <HBox alignment="CENTER" minHeight="100.0" prefHeight="100.0" styleClass="homeScreen_hbox_ContinueButton" stylesheets="@../css/main.css">
         <children>
            <Button fx:id="btn_home_continue" alignment="CENTER" contentDisplay="CENTER" maxWidth="270.0" mnemonicParsing="false" onAction="#onContinueBtnClick" prefHeight="40.0" prefWidth="270.0" styleClass="btn_dark" stylesheets="@../css/main.css" text="Continue" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
